<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Products</h1>
    </div>
  </div>

<%= form_tag search_products_path, method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: 'Search pills...' %>
  <%= submit_tag 'Search' %>

<br>

<label for="category">Category:</label>
<%= select_tag :category, options_for_select(Product.pluck(:category).uniq), include_blank: true %>
<br>

<label>
  <%= radio_button_tag :sort, 'asc' %>
  Ascending Price
</label>
<label>
  <%= radio_button_tag :sort, 'desc' %>
  Descending Price
</label>
<br>
<% end %>

<h1>Available Magic Pills</h1>
<div class="cards">
  <% @products.each do |product| %>
    <div class="card-trip mb-5">
      <img src=<%= product.image %>/>
    <div class="card-trip-infos">
      <div>
        <h2><%= product.name %></h2>
        <p class='mb-3'><%= product.effect %></p>
        <p><%= link_to "View Details", product_path(product.id), class:'btn btn-primary
' %></p>
        <br>
        <p>
    <%= link_to "Edit", product_path(product) %> |
    <%= link_to "Delete", product_path(product), method: :delete, data: { confirm: "Are you sure?" } %> |
    <%= link_to "Add to cart", order_path(product), method: :post %>
  </p>
      </div>
      <h2 class="card-trip-pricing">$<%= product.price %></h2>

      <img src="https://cdn-icons-png.flaticon.com/512/4333/4333609.png" class="card-trip-user avatar-bordered" />
      </div>
    </div>
  <% end %>
</div>

<div class="apple_pagination">
  <div class="page_info">
    <%= page_entries_info @products %>
  </div>
  <%= will_paginate @products, :container => false %>
</div>
