<h1>Search Results</h1>

<%= form_tag search_products_path, method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: 'Search pills...' %>
  <%= submit_tag 'Search' %>
<% end %>

<% if @products.present? %>
  <ul>
    <% @products.each do |product| %>
      <li>
        <h2><%= product.name %></h2>
        <p><strong>Effects:</strong> <%= product.effect %></p>
        <p><strong>Side Effects:</strong> <%= product.side_effects %></p>
        <p><strong>Lifespan (in days):</strong> <%= product.lifespan_days %></p>
        <p><strong>Price:</strong> <%= product.price %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No results found.</p>
<% end %>

<% if  url_for(:back).split('/')[-1] == 'edit'%>
  <%= link_to "Back", products_path, class:'btn btn-primary my-3' %>
<% else %>
 <%= link_to "Back", url_for(:back), class:'btn btn-primary my-3' %>
<% end %>
