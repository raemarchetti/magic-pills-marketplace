<%= simple_form_for(product) do |f| %>
  <%= f.input :name %>
  <%= f.input :effect %>
  <%= f.input :lifespan_days %>
  <%= f.input :side_effects %>
  <%= f.input :category %>
  <%= f.input :price %>
  <%= f.input :photo, as: :file, label: "Product Photo" %>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
