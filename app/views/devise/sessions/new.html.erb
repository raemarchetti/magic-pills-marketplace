<div class="mt-5">
  <h2 class="text-center">Log in</h2>

  <div class="d-flex flex-column justify-content-center align-items-center">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal w-75"}) do |f| %>
      <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control" } %>
      </div>

      <div class="form-group">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control" } %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
            <%= f.input :remember_me, as: :boolean, label: "Remember me" %>
        </div>
      <% end %>

      <div class="form-group w-100 d-flex justify-content-center mb-2">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
