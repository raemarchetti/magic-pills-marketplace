<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control" } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "form-control" } %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.input :remember_me, as: :boolean, label: "Remember me" %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

